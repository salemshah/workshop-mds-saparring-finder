{
  "name": "sparring-api",
  "author": "Salem SHAH",
  "description": "Sparring API is a RESTful API built with Node.js, Express, and TypeScript. It provides a set of endpoints for managing sparring sessions, users, and other related resources.",
  "main": "server.ts",
  "license": "UNLICENSED",
  "version": "1.0.0",
  "private": true,
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/server.js",
    "build": "tsc",
    "dev": "nodemon",
    "lint": "eslint 'src/**/*.ts' --watch",
    "lint:fix": "eslint '**/*.ts' --fix",
    "lint:ci": "eslint 'src/**/*.ts'",
    "lint:fix:ci": "eslint 'src/**/*.ts' --fix",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:push": "npx prisma db push",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prepare": "node scripts/prepare.js",
    "migrate": "ts-node scripts/migrate.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --runInBand --detectOpenHandles",
    "db:push:test": "dotenv -e .env.test -- prisma db push --accept-data-loss --skip-generate",
    "test": "npm run db:push:test && dotenv -e .env.test -- cross-env NODE_ENV=test jest --coverage --detectOpenHandles"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@prisma/client": "^5.20.0",
    "@types/cookie-parser": "^1.4.7",
    "babel-jest": "^29.7.0",
    "babel-plugin-istanbul": "^7.0.0",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "figlet": "^1.8.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "prom-client": "^15.1.3",
    "qs": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "test-exclude": "^7.0.1",
    "typedi": "^0.10.0",
    "util": "^0.12.5",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "yamljs": "^0.3.0",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.7.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "@types/nodemailer": "^6.4.16",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "openapi-types": "^12.1.3",
    "prettier": "3.3.3",
    "prisma": "^5.20.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.10.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
