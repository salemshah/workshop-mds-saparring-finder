{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES6"],
    "outDir": "build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/interfaces"],
    "types": ["jest", "node"],
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./build", "**/*.test.ts", "src/tests/**/*"]
}